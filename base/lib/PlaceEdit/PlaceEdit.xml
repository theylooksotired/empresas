<?xml version="1.0" encoding="utf-8"?>
<object>
	<name>PlaceEdit</name>
    <table>place_edit</table>
	<info>
		<sql>
			<primary>id</primary>
		</sql>
		<form>
			<title>places_edit</title>
            <pager>20</pager>
            <orderBy>title_url</orderBy>
            <searchQuery>SELECT * FROM dir_Place WHERE title LIKE "%#SEARCH%"</searchQuery>
            <searchQueryCount>SELECT COUNT(*) AS numElements FROM dir_Place WHERE title LIKE "%#SEARCH%"</searchQueryCount>
            <label>#title</label>
			<templateItemAdmin>
                <p class="image">#image</p>
                <p class="accent"><strong>#title</strong></p>
                <p class="tiny">#address</p>
                <p class="tiny">#telephone</p>
                <p class="tiny">#city</p>
            </templateItemAdmin>
		</form>
	</info>
	<attributes>
        <attribute>
            <name>id</name>
            <type>id_autoincrement</type>
        </attribute>
        <attribute>
            <name>id_place</name>
            <type>linkid_autoincrement</type>
            <label>place</label>
            <layout>label</layout>
            <refObject>Place</refObject>
        </attribute>
        <attribute>
            <name>id_user</name>
            <type>linkid_autoincrement</type>
            <label>user</label>
            <layout>label</layout>
            <refObject>User</refObject>
        </attribute>
        <attribute>
            <name>name_editor</name>
            <label>Nombre de contacto</label>
            <type>text_long</type>
            <required>true</required>
        </attribute>
        <attribute>
            <name>email_editor</name>
            <label>Email de contacto</label>
            <type>text_long</type>
            <required>true</required>
        </attribute>
        <attribute>
            <name>image</name>
            <label>Logo</label>
            <type>file_drag</type>
            <layout>image</layout>
            <maxDimensions>true</maxDimensions>
        </attribute>
        <attribute>
            <name>color_background</name>
            <label>Color de fondo</label>
            <type>color</type>
        </attribute>
        <attribute>
            <name>title</name>
            <label>Nombre de la empresa</label>
            <type>text_long</type>
            <required>not_empty</required>
        </attribute>
        <attribute>
            <name>title_url</name>
            <type>hidden_url</type>
            <refAttribute>title</refAttribute>
        </attribute>
        <attribute>
            <name>address</name>
            <label>Dirección</label>
            <type>textarea_small</type>
        </attribute>
        <attribute>
            <name>telephone</name>
            <label>Teléfono</label>
            <type>text_telephone</type>
        </attribute>
        <attribute>
            <name>mobile</name>
            <label>Teléfono móvil</label>
            <type>text_telephone</type>
        </attribute>
        <attribute>
            <name>whatsapp</name>
            <label>Whatsapp</label>
            <type>text_telephone</type>
        </attribute>
        <attribute>
            <name>web</name>
            <label>Sitio web</label>
            <type>text_url</type>
        </attribute>
        <attribute>
            <name>facebook</name>
            <label>Facebook</label>
            <type>text_url</type>
        </attribute>
        <attribute>
            <name>instagram</name>
            <label>Instagram</label>
            <type>text_url</type>
        </attribute>
        <attribute>
            <name>youtube</name>
            <label>YouTube</label>
            <type>text_url</type>
        </attribute>
        <attribute>
            <name>twitter</name>
            <label>Twitter</label>
            <type>text_url</type>
        </attribute>
        <attribute>
            <name>email</name>
            <label>Email</label>
            <type>text_email</type>
        </attribute>
        <attribute>
            <name>city</name>
            <label>Ciudad</label>
            <type>city</type>
        </attribute>
        <attribute>
            <name>city_url</name>
            <type>hidden_url</type>
            <refAttribute>city</refAttribute>
        </attribute>
        <attribute>
            <name>short_description</name>
            <label>Descripción corta</label>
            <type>textarea_long</type>
        </attribute>
        <attribute>
            <name>description</name>
            <label>Descripción</label>
            <type>textarea_ck_simple</type>
        </attribute>
        <attribute>
            <name>tags</name>
            <label>Etiquetas (máximo 3)</label>
            <type>multiple_autocomplete</type>
            <refObject>PlaceEditTag</refObject>
            <linkAttribute>id_place_edit</linkAttribute>
            <autoCompleteObject>Tag</autoCompleteObject>
            <autoCompleteAttribute>name</autoCompleteAttribute>
            <onDelete>cascade</onDelete>
            <required>true</required>
        </attribute>
        <attribute>
            <name>categories</name>
            <label>Categorias</label>
            <type>multiple_autocomplete</type>
            <refObject>PlaceEditCategory</refObject>
            <linkAttribute>id_place_edit</linkAttribute>
            <autoCompleteObject>Category</autoCompleteObject>
            <autoCompleteAttribute>name</autoCompleteAttribute>
            <onDelete>cascade</onDelete>
        </attribute>
        <attribute>
            <name>promoted</name>
            <label>Promocionado</label>
            <type>checkbox</type>
        </attribute>
        <attribute>
            <name>published</name>
            <label>Publicado en el sitio</label>
            <type>checkbox</type>
        </attribute>
    </attributes>
</object>