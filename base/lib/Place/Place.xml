<?xml version="1.0" encoding="utf-8"?>
<object>
	<name>Place</name>
    <table>place</table>
	<info>
		<sql>
            <primary>id</primary>
		</sql>
		<form>
			<title>places</title>
            <label>#title</label>
			<pager>20</pager>
			<orderBy>title_url,views</orderBy>
			<searchQuery>SELECT * FROM #TABLE WHERE title LIKE "%#SEARCH%"</searchQuery>
            <searchQueryCount>SELECT COUNT(*) AS count_results FROM #TABLE WHERE title LIKE "%#SEARCH%"</searchQueryCount>
			<label>#title</label>
			<publicUrl>#id - #title_url</publicUrl>
            <templateItemAdmin>
                #image
                <div class="item_information">
                    <p class="accent"><strong>#title</strong></p>
                    <p class="small">#address</p>
                    <p class="small">#telephone</p>
                    <p class="small">#city</p>
                </div>
            </templateItemAdmin>
		</form>
	</info>
	<attributes>
		<attribute>
            <name>id</name>
            <type>id_autoincrement</type>
        </attribute>
        <attribute>
            <name>id_user</name>
            <type>linkid_autoincrement</type>
            <label>user</label>
            <layout>label</layout>
            <refObject>User</refObject>
        </attribute>
        <attribute>
            <name>image</name>
            <label>Logo</label>
            <type>file_drag</type>
            <layout>image</layout>
            <maxDimensions>true</maxDimensions>
        </attribute>
        <attribute>
            <name>color_background</name>
            <label>Color de fondo</label>
            <type>color</type>
        </attribute>
        <attribute>
            <name>title</name>
            <label>Título</label>
            <type>text_long</type>
            <required>not_empty</required>
        </attribute>
        <attribute>
            <name>title_url</name>
            <type>hidden_url</type>
            <refAttribute>title</refAttribute>
        </attribute>
        <attribute>
            <name>address</name>
            <label>Dirección</label>
            <type>textarea_small</type>
        </attribute>
        <attribute>
            <name>telephone</name>
            <label>Teléfono</label>
            <type>text_telephone</type>
        </attribute>
        <attribute>
            <name>mobile</name>
            <label>Teléfono móvil</label>
            <type>text_telephone</type>
        </attribute>
        <attribute>
            <name>whatsapp</name>
            <label>Whatsapp</label>
            <type>text_telephone</type>
        </attribute>
        <attribute>
            <name>web</name>
            <label>Sitio web</label>
            <type>text_url</type>
        </attribute>
        <attribute>
            <name>facebook</name>
            <label>Facebook</label>
            <type>text_url</type>
        </attribute>
        <attribute>
            <name>instagram</name>
            <label>Instagram</label>
            <type>text_url</type>
        </attribute>
        <attribute>
            <name>youtube</name>
            <label>YouTube</label>
            <type>text_url</type>
        </attribute>
        <attribute>
            <name>twitter</name>
            <label>Twitter</label>
            <type>text_url</type>
        </attribute>
        <attribute>
            <name>email</name>
            <label>Email</label>
            <type>text_email</type>
        </attribute>
        <attribute>
            <name>city</name>
            <label>Ciudad</label>
            <type>text_long</type>
        </attribute>
        <attribute>
            <name>city_url</name>
            <type>hidden_url</type>
            <refAttribute>city</refAttribute>
        </attribute>
        <attribute>
            <name>short_description</name>
            <label>Descripción corta</label>
            <type>textarea_long</type>
        </attribute>
        <attribute>
            <name>description</name>
            <label>Descripción</label>
            <type>textarea_ck</type>
        </attribute>
        <attribute>
            <name>related</name>
            <label>Relacionados</label>
            <type>text_long</type>
        </attribute>
        <attribute>
            <name>search</name>
            <label>Búsqueda</label>
            <type>text_long</type>
        </attribute>
        <attribute>
            <name>categories</name>
            <label>Categorias</label>
            <type>multiple_autocomplete</type>
            <refObject>PlaceCategory</refObject>
            <linkAttribute>id_place</linkAttribute>
            <autoCompleteObject>Category</autoCompleteObject>
            <autoCompleteAttribute>name</autoCompleteAttribute>
            <onDelete>cascade</onDelete>
        </attribute>
        <attribute>
            <name>views</name>
            <label>Vistas</label>
            <type>text_integer</type>
            <baseType>integer</baseType>
        </attribute>
        <attribute>
            <name>promoted</name>
            <label>Promocionado</label>
            <type>checkbox</type>
        </attribute>
	</attributes>
    <indexes>
        <index>
            <name>title_url</name>
            <fields>title_url</fields>
        </index>
        <index>
            <name>city_url</name>
            <fields>city_url</fields>
        </index>
        <index>
            <name>promoted</name>
            <fields>promoted</fields>
        </index>
        <index>
            <name>search</name>
            <type>FULLTEXT</type>
            <fields>search</fields>
        </index>
    </indexes>
</object>