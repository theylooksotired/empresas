<?xml version="1.0" encoding="utf-8"?>
<!--
* @structure Tag
*
* @author Leano Martinet <info@asterion-cms.com>
* @package Asterion\Base
* @version 4.0.0
-->
<object>
    <name>Tag</name>
    <table>tag</table>
    <info>
        <sql>
            <primary>id</primary>
            <created>true</created>
            <modified>true</modified>
        </sql>
        <form>
            <title>tags</title>
            <label>#name</label>
            <icon>tag</icon>
            <search>name LIKE "%#SEARCH%"</search>
            <publicUrl>tag / #id - #name_url</publicUrl>
            <orderBy>name_url</orderBy>
            <pager>20</pager>
            <templateItemAdmin>
                <p class="accent"><strong>#name</strong></p>
            </templateItemAdmin>
        </form>
    </info>
    <attributes>
        <attribute>
            <name>id</name>
            <type>id_autoincrement</type>
        </attribute>
        <attribute>
            <name>image</name>
            <label>image</label>
            <type>file</type>
            <mode>image</mode>
        </attribute>
        <attribute>
            <name>icon</name>
            <label>icon</label>
            <type>text</type>
        </attribute>
        <attribute>
            <name>id_category</name>
            <label>category</label>
            <type>select</type>
            <refObject>Category</refObject>
        </attribute>
        <attribute>
            <name>name</name>
            <label>name</label>
            <required>not_empty</required>
            <type>text_long</type>
        </attribute>
        <attribute>
            <name>name_url</name>
            <type>hidden_url</type>
            <refAttribute>name</refAttribute>
        </attribute>
        <attribute>
            <name>description</name>
            <label>description</label>
            <type>textarea_long</type>
        </attribute>
        <attribute>
            <name>cities</name>
            <label>cities</label>
            <type>textarea</type>
        </attribute>
        <attribute>
            <name>places</name>
            <label>places</label>
            <mode>count</mode>
            <type>multiple_object</type>
            <refObject>PlaceTag</refObject>
            <linkAttribute>id_tag</linkAttribute>
            <onDelete>cascade</onDelete>
        </attribute>
    </attributes>
    <indexes>
        <index>
            <name>name_url</name>
            <fields>name_url</fields>
        </index>
    </indexes>
</object>